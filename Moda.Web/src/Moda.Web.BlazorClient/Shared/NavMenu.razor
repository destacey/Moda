<MudNavMenu>
    <MudTooltip Text="Home" Placement="Placement.Right">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    </MudTooltip>
    <br />

    <MudTooltip Text="Employees" Placement="Placement.Right">
        <MudNavLink Href="employees" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Groups">Employees</MudNavLink>
    </MudTooltip>
    <br />

    @if (CanViewAdministrationGroup || _canViewHangfire)
    {
        <MudDivider Class="my-1" />
        @if (_canViewUsers)
        {
            <MudTooltip Text="Users" Placement="Placement.Right">
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.SwitchAccount">Users</MudNavLink>
            </MudTooltip>
            <br />
        }
        @if (_canViewRoles)
        {
            <MudTooltip Text="Roles" Placement="Placement.Right">
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/roles" Icon="@Icons.Material.Filled.LockPerson">Roles</MudNavLink>
            </MudTooltip>
            <br />
        }

        @if (_canViewHangfire)
        {
            <MudTooltip Text="Background Jobs" Placement="Placement.Right">
                <MudNavLink Href="@_hangfireUrl" Target="_blank" Icon="@Icons.Material.Filled.AutoMode">Background Jobs</MudNavLink>
            </MudTooltip>
            <br />
        }
    }

</MudNavMenu>
