@page "/account"

<ModaTitle Title="Account" Description="Manage your account" />

<MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">
    <MudTabPanel Text="Profile">
        <Profile />
    </MudTabPanel>
    <MudTabPanel Text="Claims">
        <AccountClaims />
    </MudTabPanel>
</MudTabs>

@code
{
    [Inject]
    public IAuthenticationService AuthService { get; set; } = default!;

    public bool SecurityTabHidden { get; set; } = false;
}